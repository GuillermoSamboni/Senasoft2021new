<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SenaSoft2021New" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>



    <!--  styles para los textInputEdiText  -->
    <style name="textInpueEdiTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>

    </style>

    <!--  styles para las cardViews  -->
    <style name="cardViewStyle">

        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">15dp</item>

    </style>

    <!--  styles para los Titulos  -->
    <style name="title_text_style">

        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>

    </style>


    <!-- para los dialogos a pantalla completa   -->
    <style name="full_screen_dialog">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>


    </style>

    <!-- animaciones para los dialogos   -->

    <style name="dialog_anim">

        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>

    </style>




</resources>